# =============================================================================
# Zarathustra AWS Ops - Environment Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# AWS Region
AWS_REGION=us-east-1

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/zarathustra-aws-ops-requests
SQS_MAX_MESSAGES=10
SQS_WAIT_TIME=20
SQS_VISIBILITY_TIMEOUT=300

# Worker Configuration
MAX_WORKERS=5
POLL_INTERVAL=5

# MCP Server Configuration
MCP_AWS_OPS_URL=http://localhost:8100
MCP_AWS_OPS_TOKEN=your-mcp-auth-token

# Logging
LOG_LEVEL=INFO
